<%- layout("/layouts/boilerplate"); %>

<body class="bg-light">
    <div class="container my-4">
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success text-center col-md-6 offset-md-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <%= success %>
            </div>
        <% } %>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger text-center col-md-6 offset-md-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <%= error %>
            </div>
        <% } %>

        <div class="text-center my-4">
            <h4 class="text-primary"><%= listing.title %></h4>
        </div>

        <div class="card col-md-6 offset-md-3 shadow-lg mt-4" style="padding-left: 1rem !important; padding-bottom: 0.5rem !important; padding-right: 1rem !important;">
            <img src="<%= listing.image.url %>" class="card-img-top img-fluid rounded-top" alt="Listing Image">
            <div class="card-body">
                <h5 class="card-title text-primary"><b><%= listing.title %></b></h5>
                <p class="text-muted mb-2">Owned by <i><%= listing.owner.username %></i></p>
                <hr>
                <p><b>Description:</b> <span class="text-dark"><%= listing.description %></span></p>
                <p><b>Location:</b> <span class="text-secondary"><%= listing.location %></span></p>
                <p><b>Price:</b> <span class="text-success">&#8377;<%= listing.price %></span></p>
                <p><b>Country:</b> <span class="text-secondary"><%= listing.country %></span></p>
                <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                    <hr>
                    <div class="d-flex justify-content-between mt-2">
                        <a href="/listings/<%= listing.id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                <% } else { %>
                    <a href="/listings/<%= listing.id %>/buy" class="btn btn-primary btn-sm">Connect to Owner</a>
                <% } %>
            </div>
        </div>
        

        <div class="col-md-6 offset-md-3 my-5">
            <hr>
            <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
                    <h4 class="text-secondary">Leave a Review</h4>

                    <!-- Star Rating System -->
                    <fieldset class="starability-basic my-3">
                        <legend class="visually-hidden">Rating</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]" value="0" checked aria-label="No rating." />
                        <input type="radio" id="rate1" name="reviews[rating]" value="1" />
                        <label for="rate1">1 star</label>
                        <input type="radio" id="rate2" name="reviews[rating]" value="2" />
                        <label for="rate2">2 stars</label>
                        <input type="radio" id="rate3" name="reviews[rating]" value="3" />
                        <label for="rate3">3 stars</label>
                        <input type="radio" id="rate4" name="reviews[rating]" value="4" />
                        <label for="rate4">4 stars</label>
                        <input type="radio" id="rate5" name="reviews[rating]" value="5" />
                        <label for="rate5">5 stars</label>
                    </fieldset>

                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea id="comment" name="reviews[comment]" cols="30" rows="4" class="form-control" placeholder="Write your review here..." required></textarea>
                        <div class="invalid-feedback">Please add your review in the comment box.</div>
                    </div>

                    <div>
                        <button class="btn btn-primary w-100">Submit</button>
                    </div>
                </form>
            <% } %>
            <hr>

            <h4 class="mt-4">All Reviews</h4>
            <div class="row">
                <% for (review of listing.reviews) { %>
                    <div class="card col-md-5 m-3 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-info">@<%= review.author.username %></h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="starability-result" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </p>
                        </div>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="text-center mb-3">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
