<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Submission</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }
    .container {
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      background: white;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
      color: #007bff;
      margin-bottom: 20px;
    }
    label {
      font-weight: bold;
      margin-top: 10px;
    }
    textarea {
      resize: none;
    }
    button {
      background-color: #007bff;
      border: none;
      color: white;
      padding: 10px 15px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 16px;
      width: 100%;
      margin-top: 20px;
    }
    button:hover {
      background-color: #0056b3;
    }
    #successMessage {
      display: none;
      text-align: center;
      margin-top: 20px;
      color: #28a745;
      font-weight: bold;
    }
  </style>
  <script>
    function handleFormSubmission(event) {
      event.preventDefault(); // Prevent default form submission

      const form = event.target;

      // Show success message
      const successMessage = document.getElementById('successMessage');
      successMessage.style.display = 'block';

      // Wait for 2 seconds, then proceed with the form submission
      setTimeout(() => {
        form.submit(); // Submit the form programmatically
      }, 500);
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Contact Form</h1>
    <form action="https://formsubmit.co/<%= email %>" method="POST" onsubmit="handleFormSubmission(event)">
      <!-- Name Input -->
      <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input placeholder="Enter your name" type="text" id="name" name="name" class="form-control" required>
      </div>

      <!-- Email Input -->
      <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input placeholder="Enter your email" type="email" id="email" name="email" class="form-control" required>
      </div>

      <!-- Message Input -->
      <div class="mb-3">
        <label for="message" class="form-label">Message:</label>
        <textarea placeholder="Enter your message" id="message" name="message" rows="4" class="form-control" required></textarea>
      </div>

      <!-- Hidden Fields for Customization -->
      <input type="hidden" name="_subject" value="New Form Submission">
      <input type="hidden" name="_captcha" value="false">
      <input type="hidden" name="_template" value="table">
      <input type="hidden" name="_next" value="http://localhost:8080/listings/">

      <!-- Success Message -->
      <p id="successMessage">Your message has been sent!</p>

      <!-- Submit Button -->
      <button type="submit">Submit</button>
    </form>
  </div>
</body>
</html>
