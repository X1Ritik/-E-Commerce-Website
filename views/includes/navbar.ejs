<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: rgb(196, 188, 188); /* Light background */
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff; /* Primary color */
        }
        .navbar-brand:hover {
            color: #0056b3; /* Darker shade for hover */
        }
        .nav-link {
            font-size: 1.1rem;
            font-weight: 500;
            color: #343a40; /* Dark gray */
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #007bff; /* Primary color on hover */
        }
        .nav-link.active {
            color: #0056b3; /* Highlighted color for active links */
        }
        .navbar-toggler {
            border-color: #007bff; /* Primary color for toggler border */
        }
        .navbar-toggler-icon {
            color: #007bff; /* Primary color for toggler icon */
        }
        .ms-auto {
            margin-left: auto !important;
        }
        /* Custom search bar styles */
        .btn-search {
            color: white;
            font-weight: bold;
        }
        .sp{
            border-radius: 1rem !important;
            width: 18rem !important;
        }
        .btn{
            border-radius: 1rem !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md sticky-top">
        <div class="container-fluid">
          <!-- Navbar Brand -->
          <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass me-2"></i>ArtSphere </a>
          
          <!-- Toggler for smaller screens -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
          </button>
          
          <!-- Navbar Links -->
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <!-- Left-aligned links -->
            <div class="navbar-nav">
              <a class="nav-link active" href="/listings">All Design</a>
            </div>

            <!-- Search Bar -->
            <form class="d-flex ms-auto" role="search" action="/listings/search" method="GET">
              <input class="form-control sp me-2" type="search" name="query" placeholder="Search destinations" aria-label="Search">
              <button class="btn btn-primary btn-search" type="submit">Search</button>
            </form>

            <!-- Right-aligned links -->
            <div class="navbar-nav ms-auto">
              <a class="nav-link active" href="/listings/new">Add New Design</a>
              <% if (typeof currUser === "undefined" || !currUser) { %>
                <a class="nav-link active" href="/signup"><b>Sign Up</b></a>
                <a class="nav-link active" href="/login"><b>Log In</b></a>
              <% } else { %>
                <a class="nav-link active" href="/logout"><b>Log Out</b></a>
              <% } %>
            </div>
          </div>
        </div>
    </nav>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
