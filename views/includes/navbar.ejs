<%- layout("/layouts/boilerplate"); %>
<body>
    <nav class="navbar navbar-expand-md sticky-top">
        <div class="container-fluid">
          <!-- Navbar Brand -->
          <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass me-2"></i>ArtSphere </a>
          
          <!-- Toggler for smaller screens -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
          </button>
          
          <!-- Navbar Links -->
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <!-- Left-aligned links -->
            <div class="navbar-nav">
              <a class="nav-link active" href="/listings">All Design</a>
            </div>

            <!-- Search Bar -->
            <form class="d-flex ms-auto" role="search" action="/listings/search" method="GET">
              <input class="form-control sp me-2" type="search" name="query" placeholder="Search destinations" aria-label="Search">
              <button class="btn btn-primary btn-search" type="submit">Search</button>
            </form>

            <!-- Right-aligned links -->
            <div class="navbar-nav ms-auto">
              <a class="nav-link active" href="/listings/new">Add New Design</a>
               <% if (!currUser) { %>
                <a class="nav-link active" href="/signup"><b>Sign Up</b></a>
                <a class="nav-link active" href="/login"><b>Log In</b></a>
              <% } else { %>
                <a class="nav-link active" href="/logout"><b>Log Out</b></a>
               <% } %>
            </div>
          </div>
        </div>
    </nav>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
